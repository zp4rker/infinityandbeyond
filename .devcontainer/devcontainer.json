{
  "name": "InfinityAndBeyond",
//  "image": "mcr.microsoft.com/devcontainers/java:1-bookworm",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "username": "javadev"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": false
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installGradle": true,
      "gradleVersion": "8.10.2",
      "jdkDistro": "amzn"
    },
  },
  "remoteUser": "javadev",
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/javadev/.ssh,readonly",
  ],
}
